<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <Preference
        app:icon="@drawable/ic_alarm"
        app:key="alarmScreen"
        app:title="@string/alarm"
        app:fragment="io.r_a_d.radio2.preferences.AlarmFragment"
        />

    <Preference
        app:icon="@drawable/ic_av_timer"
        app:key="sleepScreen"
        app:title="@string/sleep"
        app:fragment="io.r_a_d.radio2.preferences.SleepFragment"
        />

    <Preference
        app:icon="@drawable/ic_customize"
        app:key="CustomizeFragment"
        app:title="@string/customize"
        app:fragment="io.r_a_d.radio2.preferences.CustomizeFragment"
        />

    <Preference
        app:icon="@drawable/ic_notification"
        app:key="streamerNotifServiceFragment"
        app:title="@string/streamerNotificationService"
        app:fragment="io.r_a_d.radio2.preferences.StreamerNotifServiceFragment"
        />

    <Preference
        app:key="readChangelog"
        app:title="Read the change log"
        app:icon="@drawable/ic_newspaper"
        />

    <Preference
        app:key="submitBug"
        app:title="Submit a bug (opens GitHub in a web browser)"
        app:icon="@drawable/ic_bug"
        />


</PreferenceScreen>
